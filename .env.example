# ==============================================
# CORVUS XBRL ENTERPRISE - Environment Variables
# ==============================================

# Application Settings
APP_NAME=Corvus XBRL Enterprise
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration - MySQL
DATABASE_TYPE=mysql
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=corvus_xbrl
DATABASE_USER=root
DATABASE_PASSWORD=your_mysql_password

# Database Configuration - SQL Server (Alternative)
# DATABASE_TYPE=mssql
# DATABASE_HOST=localhost
# DATABASE_PORT=1433
# DATABASE_NAME=corvus_xbrl
# DATABASE_USER=sa
# DATABASE_PASSWORD=your_sqlserver_password
# DATABASE_DRIVER=ODBC Driver 17 for SQL Server

# Security & Authentication
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_NUMBERS=True
PASSWORD_REQUIRE_SPECIAL=True

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=.xbrl,.xml
UPLOAD_DIRECTORY=uploads/

# Export Configuration
EXPORT_DIRECTORY=exports/
TEMP_DIRECTORY=temp/

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/corvus.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Email Configuration (for notifications and password recovery)
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@corvus-xbrl.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_TLS=True
MAIL_SSL=False

# XBRL Processing
ARELLE_CACHE_DIR=arelle_cache/
XBRL_VALIDATION_ENABLED=True

# Alert Thresholds (Default values)
ALERT_LIQUIDITY_MIN=1.0
ALERT_DEBT_RATIO_MAX=0.7
ALERT_ROE_MIN=0.05

# Session Configuration
SESSION_TIMEOUT_MINUTES=60

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_DIRECTORY=backups/
BACKUP_SCHEDULE_CRON=0 2 * * *

# External Services
# Azure/AWS credentials (if deploying to cloud)
# AZURE_STORAGE_ACCOUNT=
# AZURE_STORAGE_KEY=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# Feature Flags
ENABLE_APPROVAL_WORKFLOW=False
ENABLE_MULTI_TENANCY=False
ENABLE_API_DOCUMENTATION=True

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_CREDENTIALS=True
CORS_METHODS=*
CORS_HEADERS=*

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Company Branding
COMPANY_NAME=Tu Empresa
COMPANY_LOGO=static/images/logo.png
COMPANY_PRIMARY_COLOR=#1e3a8a
COMPANY_SECONDARY_COLOR=#3b82f6
